    write_u8 48
    write_u8 8b
    write_bits_8 11111110
}
mov_rdi_r12 () {
    write_u8 49
    write_u8 8b
    write_bits_8 11111100
}
mov_rdi_r13 () {
    write_u8 49
    write_u8 8b
    write_bits_8 11111101
}
mov_rdi_r14 () {
    write_u8 49
    write_u8 8b
    write_bits_8 11111110
}
mov_rdi_r15 () {
    write_u8 49
    write_u8 8b
    write_bits_8 11111111
}

mov_rax_ea_r14 () {
    write_u8 49
    write_u8 8b
    write_bits_8 00000110
}

mov_rdi_ea_r14 () {
    write_u8 49
    write_u8 8b
    write_bits_8 00111110
}

mov_rax_ea_rcx_disp32 () {
    write_u8 48
    write_u8 0f
    write_u8 b6
    write_bits_8 10000001
    write_u32 $1 $2 $3 $4
}

mov_eax_imm32 () {
    write_bits_8    10111000
    write_u32       $1 $2 $3 $4
}
mov_esi_imm32 () {
    write_bits_8    10111110
    write_u32       $1 $2 $3 $4
}

mov_rdi_rax () {
    write_u8 48
    write_u8 8b
    write_bits_8 11111000
}

mov_rdi_rcx () {
