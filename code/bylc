mov_rsi_r15 () {
    write_u8 49
    write_u8 8b
    write_bits_8 11110111
}
mov_rsi_imm64 () {
    write_u8 48
    write_bits_8 10111110
    write_u64 $1 $2 $3 $4 $5 $6 $7 $8
}
mov_r15_rsi () {
    write_u8 44
    write_u8 8b
    write_bits_8 11111110
}

xor_edx_edx () {
    write_u8 33
    write_bits_8 11010010
}
xor_ebx_ebx() {
    write_u8 33
    write_bits_8 11011011
}
