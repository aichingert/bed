    write_bits_8    10111111
    write_u32       $1 $2 $3 $4
}

mov_r12_rax () {
    write_u8 4c
    write_u8 8b
    write_bits_8 11100000
}

mov_r13_rax () {
    write_u8 4c
    write_u8 8b
    write_bits_8 11101000
}

mov_r14_rax () {
    write_u8 4c
    write_u8 8b
    write_bits_8 11110000
}
mov_rdi_rdx () {
    write_u8 48
