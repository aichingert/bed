#!/usr/bin/sh

# x86-64 instructions: https://www.felixcloutier.com/x86/
# more reading: https://wiki.osdev.org/X86-64_Instruction_Encoding
#             - https://www.intel.com/content/www/us/en/developer/articles/technical/intel-sdm.html
#             /r                -> reg and r/m operand
#             ib, iw, id, io    -> immediate value byte size 1, 2, 4, 8
#             +rb, +rw, +rd +ro -> lower 3 opcode bits encode register

# ea -> effective memory address
set -e

FILE="byl"
EXPL="../test/test_only_entry_fn.byl"
INST="$(date +%s)"
BUFF=$FILE
SIZE=0

ax="000"
cx="001"
dx="010"
bx="011"
sp="100"
bp="101"
si="110"
di="111"
r8="000"
r9="001"
r10="010"
r11="011"
r12="100"
r13="101"
r14="110"
r15="111"

if test -e "$FILE" ; then
    rm "$FILE"
fi

write_zeroes () {
    for i in $(seq 1 "$1") ; do
        SIZE=$(expr $SIZE + 1)
        printf '\x00' >> $BUFF
    done
}

write_bits_8 () {
    SIZE=$(expr $SIZE + 1)
    printf "\\$(printf '%o' "$((2#$1))")" >> $BUFF
}

write_u8  () {
    SIZE=$(expr $SIZE + 1)
    printf "\x$1" >> "$BUFF"
}

write_u16 () {
    write_u8 $2
    write_u8 $1
}

write_u32 () {
    write_u16 $3 $4
    write_u16 $1 $2
}

write_u64 () {
    write_u32 $5 $6 $7 $8
    write_u32 $1 $2 $3 $4
}

push_u64 () {
    REXW=48
    if test ! -z $2 ; then 
        REXW=$(expr $REXW + $2)
    fi
    write_u8 $REXW
    write_u8 ff
    write_bits_8 "11110${1}"
}

pop_u64 () {
    REXW=48
    if test ! -z $2 ; then 
        REXW=$(expr $REXW + $2)
    fi
    write_u8 $REXW
    write_u8 8f
    write_bits_8 "11000${1}"
}

neg_u64 () {
    REXW=48
    if test ! -z $2 ; then
        REXW=$(expr $REXW + $2)
    fi
    write_u8 $REXW
    write_u8 f7
    write_bits_8 "11011${1}"
}

shl_u64_imm8 () {
    REXW=48
    if test ! -z $3 ; then
        REXW=$(expr $REXW + $3)
    fi
    write_u8 $REXW
    write_u8 c1
    write_bits_8 "11100${1}"
    write_u8 $2
}

shr_u64_imm8 () {
    REXW=48
    if test ! -z $3 ; then
        REXW=$(expr $REXW + $3)
    fi
    write_u8 $REXW
    write_u8 c1
    write_bits_8 "11101${1}"
    write_u8 $2
}

shl_u64_once () {
    REXW=48
    if test ! -z $2 ; then
        REXW=$(expr $REXW + $2)
    fi
    write_u8 $REXW
    write_u8 d1
    write_bits_8 "11100${1}"
}

shr_u64_once () {
    REXW=48
    if test ! -z $2 ; then
        REXW=$(expr $REXW + $2)
    fi
    write_u8 $REXW
    write_u8 d1
    write_bits_8 "11111${1}"
}

add_ebx_imm8 () {
    write_u8 83
    write_bits_8 11000011
    write_u8 $1
}

add_rsi_imm32 () {
    write_u8 48
    write_u8 81
    write_bits_8 11000110
    write_u32 $1 $2 $3 $4
}

and_rax_imm32 () {
    write_u8 48
    write_u8 25
    write_u32 $1 $2 $3 $4
}

and_rcx_imm32 () {
    write_u8 48
    write_u8 81
    write_bits_8 11100001
    write_u32 $1 $2 $3 $4
}

and_rsi_imm32 () {
    write_u8 48
    write_u8 81
    write_bits_8 11100110
    write_u32 $1 $2 $3 $4
}

add_r13d_imm32 () {
    write_u8 41
    write_u8 81
    write_bits_8 11000101
    write_u32 $1 $2 $3 $4
}

add_r15_imm32 () {
    write_u8 49
    write_u8 81
    write_bits_8 11000111
    write_u32 $1 $2 $3 $4
}

and_r13d_imm32 () {
    write_u8 41
    write_u8 81
    write_bits_8 11100101
    write_u32 $1 $2 $3 $4
}

