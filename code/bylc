}

mov_rdx_r13 () {
    write_u8 49
    write_u8 8b
    write_bits_8 11010101
}

mov_edx_imm32 () {
    write_u8        ba
    write_u32       $1 $2 $3 $4
}

mov_edi_eax () {
    write_u8 8b
    write_bits_8 11111000
}
